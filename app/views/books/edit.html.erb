<body>
    <h1>Editing Book</h1>

<% if @book.errors.any? %>
<div id="errorbox">
  <h2><%= @book.errors.count %><span> error</span></h2>
<% @book.errors.full_messages.each do |message| %>
  <ul>
    <li><%= message %></li>
  </ul>
<% end %>
</div>
<% end %>

<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
<div class="field">
  <label>Title</label>
  <%= f.text_field :title %>
</div>
<div class="field">
  <label>Body</label>
  <%= f.text_area :body %>
</div>
<div class="field">
  <%= f.submit 'Update Book' %>
</div>
  <%end%>

  <%= link_to "Show", book_path(@book.id) %>
  <span>|</span>
  <%= link_to "Back", books_path %>

</body>