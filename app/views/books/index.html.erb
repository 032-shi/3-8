<body>
<% if flash[:notice] %>
   <p id="notice">
     <%= flash[:notice] %>
   </p>
<% end %>
<h1>Books</h1>

<table>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id) %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>
      </tr>
    <%end%>
  </tbody>
</table>


<h2>New book</h2>

<% if @book.errors.any? %>
<div id="errorbox">
  <h2><%= @book.errors.count %><span> error</span></h2>
<% @book.errors.full_messages.each do |message| %>
  <ul>
    <li><%= message %></li>
  </ul>
<% end %>
</div>
<% end %>

<%= form_with model:Book.new, url:'/books', local:true do |f| %>
  <div class="field">
   <label>Title</label>
   <%= f.text_field :title %>
  </div>
  <div class="field">
   <label>Body</label>
   <%= f.text_area :body %>
  </div>
  <div>
   <%= f.submit 'Create Book' %>
  </div>
<%end%>
</body>